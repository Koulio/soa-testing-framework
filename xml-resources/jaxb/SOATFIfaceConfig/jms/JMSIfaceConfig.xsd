<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:jmsconf="http://www.ibm.com/SOATF/Config/Iface/JMS"
    targetNamespace="http://www.ibm.com/SOATF/Config/Iface/JMS" elementFormDefault="qualified"
    attributeFormDefault="unqualified">

    <xs:complexType name="JMSConfig">
        <xs:annotation>
            <xs:documentation xml:lang="en">JMS messaging related configuration type.
            
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>

            <xs:element name="jmsServer">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required"/>
                </xs:complexType>
            </xs:element>
            <xs:element name="connectionFactory">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required"/>
                    <xs:attribute name="jndiName" type="xs:string" use="required"/>
                </xs:complexType>
            </xs:element>
            <xs:element name="queue">
                <xs:complexType>
                    <xs:attribute name="name" type="xs:string" use="required"/>
                    <xs:attribute name="jndiName" type="xs:string" use="required"/>
                </xs:complexType>
            </xs:element>
            <xs:element name="messageSchema">
                <xs:annotation>
                    <xs:documentation xml:lang="en">JMS message schema defined in XSD file. Use for message validation.</xs:documentation>
                </xs:annotation>
                <xs:complexType>
                    <xs:attribute name="path" type="xs:string" use="required">
                        <xs:annotation>
                            <xs:documentation xml:lang="en">Relative URI of the message schema file withing the project.</xs:documentation>
                        </xs:annotation>
                    </xs:attribute>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
