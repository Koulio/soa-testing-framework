<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xmlns:globconf="http://www.ibm.com/SOATF/Config/Project/Global"
       targetNamespace="http://www.ibm.com/SOATF/Config/Project/Global"
       elementFormDefault="qualified">
       <xs:complexType name="GlobalConfiguration">
              <xs:sequence>
                     <xs:element name="workingDirectory" type="xs:string">
                            <xs:annotation>
                                   <xs:documentation xml:lang="en">This is the working directory used by the framework. Should be set to the folder containing OSB/SOA project locally on developer machine.</xs:documentation>
                            </xs:annotation>
                     </xs:element>
                     <xs:element name="interfaceName" type="xs:string">
                            <xs:annotation>
                                   <xs:documentation xml:lang="en">Interface name.</xs:documentation>
                            </xs:annotation>
                     </xs:element>
                     <xs:element name="interfaceSourceIdentificators">
                            <xs:complexType>
                                   <xs:sequence>
                                          <xs:element maxOccurs="unbounded" minOccurs="0"
                                                 name="endpoint">
                                                 <xs:complexType>
                                                  <xs:attribute name="identificator"/>
                                                 </xs:complexType>
                                          </xs:element>
                                   </xs:sequence>
                            </xs:complexType>
                     </xs:element>
              </xs:sequence>
       </xs:complexType>
</xs:schema>
