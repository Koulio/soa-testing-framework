<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:jmsconf="http://www.archenroot.org/SoaTestingFramework/JmsConfiguration"
           targetNamespace="http://www.archenroot.org/SoaTestingFramework/JmsConfiguration"
           elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:include schemaLocation="Queue.xsd"/>
    <xs:include schemaLocation="Topic.xsd"/>
    <xs:complexType name="Server">
        <xs:annotation>
            <xs:documentation xml:lang="en">
            
                Currently supporting only one module and connection factory per JMS server.
                
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="serverName" type="xs:string" minOccurs="1" maxOccurs="1"/>
            <xs:element name="moduleName" type="xs:string" minOccurs="1" maxOccurs="1"/> 
            <xs:element name="connectionFactoryJndi" type="xs:string" minOccurs="1" maxOccurs="1"/>
            <xs:element name="queue" type="jmsconf:Queue" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="topic" type="jmsconf:Topic" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
