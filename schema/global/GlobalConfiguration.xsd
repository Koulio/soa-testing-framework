<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xmlns:globconf="http://www.archenroot.org/SoaTestingFramework/Config/Global"
       targetNamespace="http://www.archenroot.org/SoaTestingFramework/Config/Global"
       elementFormDefault="qualified">
       <xs:complexType name="GlobalConfiguration">
              <xs:sequence>
                     <xs:element name="fileSystemStructure" type="globconf:FileSystemStructure"/>
              </xs:sequence>
       </xs:complexType>
       <xs:complexType name="FileSystemStructure">
              <xs:sequence>
                     <xs:element name="rootFolder">
                            <xs:complexType>
                                   <xs:sequence>
                                          <xs:element name="reportFolder">
                                                 <xs:complexType>
                                                  <xs:sequence>
                                                  <xs:element name="jUnitFolder">
                                                  <xs:complexType>
                                                  <xs:attribute default="junit" name="name"
                                                  type="xs:string"/>
                                                  </xs:complexType>
                                                  </xs:element>
                                                  <xs:element name="httpFolder">
                                                  <xs:complexType>
                                                  <xs:attribute default="http" name="name"
                                                  type="xs:string"/>
                                                  </xs:complexType>
                                                  </xs:element>
                                                  <xs:element name="pdfFolder">
                                                  <xs:complexType>
                                                  <xs:attribute default="pdf" name="name"
                                                  type="xs:string"/>
                                                  </xs:complexType>
                                                  </xs:element>
                                                  <xs:element name="xmlFolder">
                                                  <xs:complexType>
                                                  <xs:attribute default="xml" name="name"
                                                  type="xs:string"/>
                                                  </xs:complexType>
                                                  </xs:element>
                                                  </xs:sequence>
                                                  <xs:attribute default="report" name="name"
                                                  type="xs:string"/>
                                                 </xs:complexType>
                                          </xs:element>
                                   </xs:sequence>
                                   <xs:attribute default="test" name="name" type="xs:string"/>
                            </xs:complexType>
                     </xs:element>
              </xs:sequence>
       </xs:complexType>
</xs:schema>
