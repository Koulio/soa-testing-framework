<xs:schema version="1.0"
           xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dbconf="http://www.archenroot.org/SoaTestingFramework/DatabaseConfiguration"
           targetNamespace="http://www.archenroot.org/SoaTestingFramework/DatabaseConfiguration"
           elementFormDefault="qualified" attributeFormDefault="unqualified">
    <xs:include schemaLocation="ConnectionIdentification.xsd"/>
    <xs:complexType name="DatabaseConfiguration">
        <xs:annotation>
            <xs:documentation>
                
                Configuration related to DatabaseComponent part of the framework.
                
                Supported databases: Oracle
                
                Planned support for any database with generic JDBC interface available.
                
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="connectionIdentification" type="dbconf:ConnectionIdentification" minOccurs="1" maxOccurs="1"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>
